<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.co.echoindia.echo.User.DevelopmentActivity"
    tools:showIn="@layout/activity_development"
    android:orientation="vertical"
    android:weightSum="12">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="in.co.echoindia.echo.User.DevelopmentInProgressActivity" />
    </LinearLayout>

<TextView
    android:id="@+id/map_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:layout_editor_absoluteY="491dp"
    tools:layout_editor_absoluteX="131dp"
    android:layout_weight="1"
    android:text="The map was last updated on 13th Mar , 2017 ."
    android:textSize="12sp"
    android:textStyle="italic"
    />
</LinearLayout>