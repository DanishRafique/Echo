<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.echoindia.echo.HomePage.PollFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/poll_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/max_wage" />


                <TextView
                    android:id="@+id/poll_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/poll_image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Should there be a maximum wage law ?"
                    android:textColor="#130101"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/poll_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/poll_title"
                    android:layout_margin="10dp"
                    android:text="The idea of a maximum wage can be traced back to Aristotle who believed that no one person in Greece should have more than 5 times the wealth of the poorest person. Maximum wage is increasingly becoming a frequent subject of debate in the 21st century as more CEOs and top executives take home millions of dollars in earnings compared to the minimum wage earned by some of the employees in the same companies."
                    android:textColor="#2c3033"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/poll_number_positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poll_description"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                        android:id="@+id/poll_bar_one"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        app:rcBackgroundColor="@color/background_content"
                        app:rcBackgroundPadding="4dp"
                        app:rcMax="13736"
                        app:rcProgress="7485"
                        app:rcProgressColor="@color/custom_progress_green_progress"
                        app:rcRadius="30dp"
                        app:rcReverse="false"
                        app:rcSecondaryProgress="7985"
                        app:rcSecondaryProgressColor="@color/custom_progress_green_header"
                        app:rcTextProgress="54.72%"
                        app:rcTextProgressColor="#FFF"
                        app:rcTextProgressMargin="1dp"
                        app:rcTextProgressSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/poll_option_one_vote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="7485"
                            android:textColor="#000"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="Votes"
                            android:textSize="14sp"
                            android:textStyle="italic" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/poll_number_negative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poll_number_positive"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                        android:id="@+id/poll_bar_two"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        app:rcBackgroundColor="@color/background_content"
                        app:rcBackgroundPadding="4dp"
                        app:rcMax="13736"
                        app:rcProgress="6251"
                        app:rcProgressColor="@color/custom_progress_red_header"
                        app:rcRadius="30dp"
                        app:rcReverse="false"
                        app:rcSecondaryProgress="6751"
                        app:rcSecondaryProgressColor="@color/custom_progress_red_progress"
                        app:rcTextProgress="45.28%"
                        app:rcTextProgressColor="#FFF"
                        app:rcTextProgressMargin="1dp"
                        app:rcTextProgressSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/poll_option_two_vote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="6251"
                            android:textColor="#000"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="Votes"
                            android:textSize="14sp"
                            android:textStyle="italic" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/poll_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poll_number_negative"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/poll_option_one_text"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/rounded_buttons"
                            android:elevation="20dp"
                            android:text="Aye"
                            android:textAlignment="center"
                            android:textColor="#fff">

                        </Button>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/poll_option_two_text"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/rounded_buttons"

                            android:text="Nay"
                            android:textColor="#fff" />
                    </LinearLayout>


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/news_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/poll_buttons"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/poll_vendor_logo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/icon" />

                    <TextView
                        android:id="@+id/poll_vendor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/news_timeline"

                        android:layout_alignBottom="@+id/news_timeline"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/poll_vendor_logo"
                        android:text="Echo"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/news_timeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="2dp"
                        android:text="4 hr ago"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_footer">

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ToggleButton
                                android:id="@+id/news_upvote"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@android:color/transparent"
                                android:button="@drawable/selector_wishlist_icon"
                                android:textOff="@null"
                                android:textOn="@null" />

                            <TextView
                                android:id="@+id/news_upvote_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="1dp"
                                android:text="Kudos" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ToggleButton
                                android:id="@+id/news_downvote"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@android:color/transparent"
                                android:button="@drawable/selector_downvote_icon"
                                android:textOff="@null"
                                android:textOn="@null" />

                            <TextView
                                android:id="@+id/news_downvote_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="1dp"
                                android:text="Nah" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/news_full_story_link"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/news_full_story"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignBottom="@+id/poll_title"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/ic_news_full_story"
                                android:textOff="@null"
                                android:textOn="@null" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="1dp"
                                android:text="Full Story" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/news_share"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignBottom="@+id/poll_title"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/ic_share"
                                android:textOff="@null"
                                android:textOn="@null" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="1dp"
                                android:text="Share" />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>