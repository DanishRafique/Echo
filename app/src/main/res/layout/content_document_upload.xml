<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.co.echoindia.echo.User.DocumentUpload"
    tools:showIn="@layout/activity_document_upload"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/img_voter_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_voter_id"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Upload an Image of Your Voter ID ."
                android:textAlignment="center"
                android:layout_marginBottom="10dp"/>
            <ProgressBar
                android:id="@+id/progress_bar_voter_id"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Upload"
                android:background="@drawable/rounded_buttons"
                android:shadowColor="@color/colorPrimaryDark"
                android:textColor="#fff"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Please Upload an Image of Your Aadhaar Card ."
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progress_bar_aadhaar_card"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Upload"
                android:background="@drawable/rounded_buttons"
                android:shadowColor="@color/colorPrimaryDark"
                android:textColor="#fff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/img_aadhaar_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_aadhaar_card"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
